<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="265.0" prefWidth="358.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chatpsit.client.LoginController">
   <children>
      <Button fx:id="loginButton" layoutX="284.0" layoutY="219.0" mnemonicParsing="false" onAction="#attemptLogin" text="Login">
         <padding>
            <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
         </padding>
      </Button>
      <TextField fx:id="fieldUsername" layoutX="142.0" layoutY="88.0" prefHeight="26.0" prefWidth="202.0" />
      <Label layoutX="35.0" layoutY="93.0" text="Nome utente" />
      <Label layoutX="57.0" layoutY="134.0" text="Password" />
      <Label layoutX="109.0" layoutY="14.0" text="Benvenuto!">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="84.0" layoutY="50.0" text="Effettua l'accesso o registrati" />
      <Button fx:id="registerButton" layoutX="14.0" layoutY="219.0" mnemonicParsing="false" onAction="#showRegistrationScene" text="Registrati">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding></Button>
      <Label layoutX="72.0" layoutY="176.0" text="Server:" />
      <PasswordField fx:id="fieldPasswd" layoutX="142.0" layoutY="129.0" prefHeight="26.0" prefWidth="202.0" />
      <ChoiceBox fx:id="serverChoiceBox" items="${controller.serverChoices}" layoutX="142.0" layoutY="168.0" prefHeight="26.0" prefWidth="202.0" value="${controller.defaultServerChoice}">
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </ChoiceBox>
   </children>
</AnchorPane>
